<!DOCTYPE html>
<html>
  <head>
    <title>RailsYelpMvp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel=“stylesheet” href=“https://use.fontawesome.com/releases/v5.0.10/css/all.css”>
  </head>

  <body>
      <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
        <%= link_to restaurants_path, class: "navbar-brand" do %>
          <%= image_tag "https://image.freepik.com/free-vector/chef-mascot-cartoon-illustration_27088-397.jpg" %>
          <% end %>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>


        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <%= link_to "Home", restaurants_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Create a new Restaurant", new_restaurant_path, class: "nav-link" %>
            </li>
            <li class="nav-item dropdown">
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <%= link_to "Home", restaurants_path, class: "dropdown-item" %>
                <%= link_to "Create a new Restaurant", new_restaurant_path, class: "dropdown-item" %>
              </div>
            </li>
          </ul>
        </div>
      </div>
    <div class="container">
      <%= yield %>

    </div>
  </body>
</html>
